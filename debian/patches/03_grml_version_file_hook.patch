@@ -40,6 +40,12 @@
 	done
 fi
 
+# Grml version information:
+if [ -r /etc/grml_version ]
+then
+       cp /etc/grml_version "${DESTDIR}"/etc
+fi
+
 # Handling live-boot
 
 if [ ! -e /usr/share/live-boot ]
